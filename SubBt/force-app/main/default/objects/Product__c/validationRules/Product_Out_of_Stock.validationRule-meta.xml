<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_Out_of_Stock</fullName>
    <active>true</active>
    <errorConditionFormula>Quantity__c &gt;  Product__r.Current_Stock__c</errorConditionFormula>
    <errorDisplayField>Quantity__c</errorDisplayField>
    <errorMessage>This product is out of stock.</errorMessage>
</ValidationRule>
